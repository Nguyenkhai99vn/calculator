<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:weightSum="10">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2"
        android:background="@color/colorH"
        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="0"
            android:textColor="@color/colorDark"
            android:textSize="50dp"
            android:gravity="right|top"
            android:paddingRight="10dp"
            android:id="@+id/ViewKQ"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:weightSum="5"
            android:paddingTop="0dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MC"
                android:gravity="center|bottom"
                android:paddingBottom="7dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:text="MR"
                android:paddingBottom="7dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="M+"
                android:gravity="center|bottom"
                android:paddingBottom="7dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="M-"
                android:gravity="center|bottom"
                android:paddingBottom="7dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="MS"
                android:gravity="center|bottom"
                android:paddingBottom="7dp"
                android:textSize="20dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/colorH"
        android:layout_weight="8"
        android:weightSum="4">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:weightSum="6">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="%"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="1/x"
                android:textSize="18dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="7"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT7"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="4"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT4"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="1"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT1"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="+/-"
                android:textSize="20dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="CE"
                android:textSize="20dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTDelAll"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="x^2"
                android:textSize="18dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:gravity="center"
                android:text="8"
                android:textColor="@color/colorDark"
                android:textSize="25dp"
                android:id="@+id/BT8"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="5"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT5"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="2"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT2"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="0"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT0"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="C"
                android:textSize="20dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTDel"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="2√x"
                android:textSize="18dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="9"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT9"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="6"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT6"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="3"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BT3"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorWrite"
                android:text="."
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="DEL"
                android:textSize="18dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="/"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTChia"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="*"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTNhan"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="-"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTTru"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colornoDark"
                android:text="+"
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTCong"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorG"
                android:text="="
                android:textSize="25dp"
                android:textColor="@color/colorDark"
                android:gravity="center"
                android:layout_margin="2dp"
                android:id="@+id/BTBang"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>